<configuration>
    <!-- File Appender: Naplózási üzenetek írása a connect4.log fájlba -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>connect4.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="debug">
        <appender-ref ref="FILE" />
    </root>
</configuration>
